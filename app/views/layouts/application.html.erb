<!DOCTYPE html>
<html>
  <head>
    <title>DasboardApplication</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= current_user.nil? ? 'login-body' : '' %>">

    <%= render partial: 'layouts/header' if current_user %>
    <h3 class='p-display notice'><%= flash[:error] %></h3>
    <div class='global-wrapper' style="padding-left:20px">
      <%= yield %>
    </div>
  </body>
</html>
