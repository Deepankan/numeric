<div class="wrapper fadeInDown">
  <div id="formContent">
    <!-- Tabs Titles -->

    <!-- Icon -->
    <div class="fadeIn first">
      <img src="/assets/login.png" id="icon" alt="User Icon" />
    </div>

    <!-- Login Form -->
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.text_field :email, id: 'login', class: 'fadeIn second', placeholder: 'Email', autofocus: true %>
      <%= f.password_field :password, id: 'password', class: 'fadeIn third', placeholder: 'Password', autocomplete: "off" %>
      <div class="row">
        <div class="col-md-6">
          <%= f.submit "Sign In", class: 'fadeIn fourth' %>
        </div>
        <div class="col-md-5">
          <%= link_to "Sign Up", new_registration_path(resource_name), class: 'fadeIn fourth button' %>
        </div>
      </div>
    <% end %>

    <!-- Remind Passowrd -->
    <div id="formFooter">
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'underlineHover' %>
    </div>
  </div>
</div>
