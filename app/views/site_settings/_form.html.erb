<%= form_with(model: site_setting, local: true) do |form| %>
  <% if site_setting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(site_setting.errors.count, "error") %> prohibited this site_setting from being saved:</h2>

      <ul>
      <% site_setting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-1">
      <%= form.label :api_client_id %>
    </div>
