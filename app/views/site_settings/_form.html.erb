      <%= form.text_field :api_client_id, id: :site_setting_api_client_id %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-1">
      <%= form.label :api_key %>
    </div>
    <div class="col-md-11">
      <%= form.text_field :api_key, id: :site_setting_api_key %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <%= form.submit params[:action] == 'new' ? 'Create' : 'Update', class: 'pull-right' %>
    </div>
    <div class="col-md-6">
      <%= link_to 'Back', site_settings_path, class: 'fadeIn fourth button' %>
    </div>
  </div>
