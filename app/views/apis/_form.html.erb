<%= form_with(model: api, local: true) do |form| %>
  <% if api.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(api.errors.count, "error") %> prohibited this api from being saved:</h2>

      <ul>
      <% api.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-1">
      <%= form.label :url %>
    </div>
    <div class="col-md-11">
      <%= form.text_field :url, id: :api_url %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-1">
      <%= form.label :offset %>
    </div>
    <div class="col-md-11">
      <%= form.text_field :offset, id: :api_offset %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-1">
      <%= form.label :limit %>
    </div>
    <div class="col-md-11">
      <%= form.text_field :limit, id: :api_limit %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <%= form.submit params[:action] == 'new' ? 'Create' : 'Update', class: 'pull-right' %>
    </div>
    <div class="col-md-6">
      <%= link_to 'Back', apis_path, class: 'fadeIn fourth button' %>
    </div>
  </div>
<% end %>
